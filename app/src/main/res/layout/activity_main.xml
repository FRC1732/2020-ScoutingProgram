<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.frc1732scoutingapp.activities.MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="631dp"
        android:paddingTop="0dp">

        <Button
            android:id="@+id/logMatchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Match" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="235dp"
            android:layout_height="228dp"
            android:layout_below="@id/logMatchButton"
            android:layout_toRightOf="@id/logMatchButton"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/syncSheetsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logMatchButton"
            android:text="Sync to Sheets" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:text="Hello there!" />

    </RelativeLayout>

</FrameLayout>