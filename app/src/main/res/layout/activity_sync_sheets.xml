<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SyncSheetsActivity">

    <TextView
        android:id="@+id/teamNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingRight="8dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Team Number"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/teamNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamNumberLabel"
        android:gravity="center"
        android:inputType="number" />

    <Button
        android:id="@+id/syncSheetsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamNumberEditText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Sync" />

</RelativeLayout>